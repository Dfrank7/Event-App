<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_detail_title"
                android:textAllCaps="true"
                android:textColor="@color/album_title"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="Post Topic"
                android:textAppearance="?android:textAppearanceLarge"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:padding="5dp"
                app:srcCompat = "@drawable/blog_placeholder"
                android:id="@+id/event_imageview"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/event_detail_desc"
                android:lineSpacingExtra="4dp"
                android:text="Post"
                android:textColor="#000000"
                android:textAppearance="?android:textAppearanceMedium"
                android:padding="7dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="#dcdada"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commentCount"
                    android:text="0"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:gravity="start"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment"
                    android:paddingLeft="4dp"
                    android:text="Comments"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/commentViewButton"
                    android:text="View"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:layout_marginLeft="100dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="#dcdada"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
